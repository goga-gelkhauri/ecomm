@page
@model Shop.UI.Pages.Checkout.CustomerInformationModel
@{
   
}

<h1>CustomerInformation</h1>

<div class="columns">
    <div class="column is-6">


        <form method="post">
            <div class="field">
                <p class="control">
                    <label class="label">First Name</label>
                    <input class="input" asp-for="CustomerInformation.FirstName" />
                </p>
                <span asp-validation-for="CustomerInformation.FirstName"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">First Name</label>
                    <input class="input" asp-for="CustomerInformation.LastName" />
                </p>
                <span asp-validation-for="CustomerInformation.LastName"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">First Name</label>
                    <input class="input" asp-for="CustomerInformation.Email" />
                </p>
                <span asp-validation-for="CustomerInformation.Email"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">First Name</label>
                    <input class="input" asp-for="CustomerInformation.PhoneNumber" />
                </p>
                <span asp-validation-for="CustomerInformation.PhoneNumber"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">First Name</label>
                    <input class="input" asp-for="CustomerInformation.Address1" />
                </p>
                <span asp-validation-for="CustomerInformation.Address1"></span>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">First Name</label>
                    <input class="input" asp-for="CustomerInformation.Address2" />
                </p>
            </div>
            <div class="field">
                <p class="control">
                    <label class="label">First Name</label>
                    <input class="input" asp-for="CustomerInformation.City" />
                </p>
                <span asp-validation-for="CustomerInformation.City"></span>
            </div>

            <div class="field">
                <p class="control">
                    <label class="label">First Name</label>
                    <input class="input" asp-for="CustomerInformation.PostCode" />
                </p>
                <span asp-validation-for="CustomerInformation.PostCode"></span>
            </div>
            <div class="field">
                <button class="button is-success" type="submit">Checkout</button>
            </div>


        </form>
    </div>
    <div class="column is-6">
        <vc:cart view="Default"></vc:cart>
    </div>
</div>